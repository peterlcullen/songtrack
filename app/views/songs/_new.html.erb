
<%= form_for @song do |f| %>
  <div class="modal-header">
    <a href="#" class="close">&times;</a>
    <h3>Add a song</h3>
  </div>
  
  <div class="modal-body">
    <% if @song.errors.any? %>
      <div class="error_messages">
        <h2>Oops, something was invalid</h2>
        <ul
          <% for message in @song.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <fieldset>
      <div class="clearfix">
        <%= f.label "Song ID" %>
        <div class="input">
          <%= f.text_field :foreign_id %>
        </div>
      </div>
      <div class="clearfix">
        <%= f.label :source %>
        <div class="input">
          <%= f.select :source, "<option>grooveshark</option><option>bandcamp</option>".html_safe %>
        </div>
      </div>
    </fieldset>
  </div>
  
  <div class="modal-footer">
    <%= f.submit :class => "btn primary"%>
  </div>
  
<% end %>

